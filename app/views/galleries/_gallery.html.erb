<% if gallery.drawings.count > 0 %>
  <div class="<%= color %>_block gallery">
    <% keywords = gallery.keywords.split(',').map{ |val| I18n.t("keywords.#{val}")}.join(', ') %>
    <div class="title"><%= gallery.name %> <span style="float:right;margin-right:10px;">auteur : <%= link_to gallery.user.pseudo, gallery.user %> </span></div>
    <div class="content">
      <% gallery.drawings.limit(6).order("created_at desc").each do |m| %>
        <%= image_tag m.url(:thumb) %>
      <% end %>
    </div>
  </div>
  <div class="<%= color %>_block_footer  gallery">
    <div class="block">
      <div class="link">
        <%= link_to 'Show', gallery %>
      </div>
      <div class="keywords" >
        <%= keywords %>
      </div>
    </div>
  </div>
<% end %>