<h1>Editing news</h1>

<%= form_for(@information,:url => {:action => "update", :controller=>"informations"}) do |f| %>
  <%= form_errors! @information %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Show', @ninformation %> |
