<div class="white_block_without_corner">
  <div class="title">Dossier : <%= @folder.name %></div>
  <div class="content">
    <%= @folder.description.size > 0 ? @folder.description : "Pas de description" %>
  </div>
</div>

<% @drawings.each do |d| %>
  <div style="width:170px;height:170px;line-height:170px;float:left;text-align:center;">
    <%= image_tag d.url(:small), :style => "border:2px solid #ffffff;display:inline-block;" %>
  </div>
<% end %>

<%= link_to 'Edit', edit_folder_path(@folder) %> |
<%= link_to 'Back', folders_path %>
