<div class="blue_block_without_corner">
  <div class="title">Mes données personnelles</div>
  <div class="content">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true, :method => :put, :autocomplete => 'off' }) do |f| %>
      <%= devise_error_messages! %>
      <p><%= image_tag current_user.avatar.url(:thumb) %></p>

      <p><%= f.label :avatar %><br/>
        <%= f.file_field :avatar %></p>

      <p><%= f.label :birth_date %>
        <%= f.date_select :birth_date,:order => [:day, :month, :year], :default => (20.days.from_now), :end_year => (Time.now.year - 5), :start_year => (Time.now.year - 60) %></p>

      <p><%= f.label :sex %>
        <%= f.select :sex, User::SEX, :selected => current_user.sex %></p>

      <p><%= f.label :description %><br/>
        <%= f.text_area :description, :cols => 70, :rows => 10 %></p>

      <p><%= f.label :password %> <i>(laisser blanc si vous ne voulez pas le changer)</i><br />
        <%= f.password_field :password %></p>

      <p><%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation %></p>

      <p><%= f.label :current_password %> <i>(entrez votre mot de passe pour mettre à jour votre compte)</i><br />
        <%= f.password_field :current_password %></p>

      <p><%= f.submit "Mettre à jour mon compte" %></p>
    <% end %>
  </div>
</div>
<div class="pink_block_without_corner">
  <div class="title">Supprimer mon compte</div>
  <div class="content">
    Si vous supprimer votre compte vos données seront effacées<br/>
    <%= link_to "Supprimer mon compte", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>
  </div>
</div>
