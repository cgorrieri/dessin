<div class="<%= color %>_block">
  <div class="title"><%= folder.name %></div>
  <div class="content">
    <% folder.drawings.limit(4).reverse.each do |m| %>
      <%= image_tag m.url(:thumb) %>
    <% end %>
  </div>
</div>
<div class="<%= color %>_block_footer">
  <div class="block"><div class="link"><%= link_to 'Show', folder %> | <%= link_to 'Edit', edit_folder_path(folder) %> | <%= link_to 'Destroy', folder, :confirm => 'Are you sure?', :method => :delete %></div></div>
</div>